<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">


    <!--Fuel Used-->
    <LinearLayout
        android:id="@+id/fuelContainer"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacerLayout"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight="2">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/fuel2"
                android:scaleType="fitXY"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="3"
            android:layout_height="150dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/fuelData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="60sp"
                android:textColor="#ddd"
                android:layout_gravity="center_vertical"
                android:text="100"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#ddd"
                android:text="Gals"/>
        </LinearLayout>
    </LinearLayout>
    <!--End Fuel Used-->

    <!--Carbon Used-->
    <LinearLayout
        android:id="@+id/carbonContainer"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:layout_below="@id/fuelContainer"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight="2">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/cloud_icon"
                android:scaleType="fitXY"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="3"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/carbonData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:textColor="#ddd"
                android:textSize="60sp"
                android:text="50"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#ddd"
                android:text="kg carbon"/>
        </LinearLayout>
    </LinearLayout>
    <!--End Carbon Used-->

    <!--Trees Killed-->
    <LinearLayout
        android:id="@+id/treesContainer"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:layout_below="@id/treesContainer"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight="2">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/leafcopy"
                android:scaleType="fitXY"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="3"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/metricData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="60sp"
                android:layout_gravity="center_vertical"
                android:textColor="#ddd"
                android:text="50"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#ddd"
                android:text="trees required"/>
        </LinearLayout>

    </LinearLayout>
    <!--End Trees Killed-->

    <!--Average Speed-->
    <LinearLayout
        android:id="@+id/speedDataContainer"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_below="@id/treesContainer"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:layout_weight="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avg Speed:"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/avgSpeedNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="86"
                android:textSize="40sp"
                android:layout_gravity="center_vertical"
                android:textColor="#ddd"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#ddd"
                android:text="mph"/>
        </LinearLayout>

    </LinearLayout>
    <!--End Average Speed-->

    <!--Average Speed-->
    <LinearLayout
        android:id="@+id/milesDataContainer"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_below="@id/treesContainer"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mi. Driven:"
                android:layout_marginRight="10dp"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/milesNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="86"
                android:textSize="40sp"
                android:layout_gravity="center_vertical"
                android:textColor="#eee"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#eee"
                android:text="Mi"/>
        </LinearLayout>

    </LinearLayout>
    <!--End Average Speed-->


</LinearLayout>