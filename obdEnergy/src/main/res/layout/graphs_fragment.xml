<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <LinearLayout
        android:id="@+id/spacerLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/activityTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="SEE DATA OVER TIME"
            android:gravity="center"
            android:textColor="@android:color/white"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/todayButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TODAY"/>

            <Button
                android:id="@+id/weekButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1 WEEK"/>
            <Button
                android:id="@+id/monthButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1 MONTH"/>
            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fuelNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="256"
                android:textSize="40sp"
                android:layout_centerInParent="true"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/fuelNumber"
                android:layout_alignBaseline="@+id/fuelNumber"
                android:textColor="@color/white"
                android:text="gallons of gas"/>
            </RelativeLayout>


        <LinearLayout
            android:id="@+id/carbonLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--TODO: setmax width-->
            <RelativeLayout
                android:id="@+id/carbonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/carbonUsed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22 kilos"/>
                <TextView
                    android:id="@+id/carbonScale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/carbonUsed"
                    android:text="1 cloud per kilo of carbon"/>
                </RelativeLayout>


            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/cloud_icon"
                android:scaleType="fitXY"/>

            </LinearLayout>
        <LinearLayout
            android:id="@+id/treesLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--TODO: setmax width-->
            <RelativeLayout
                android:id="@+id/treesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/treesUsed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22 kilos"/>
                <TextView
                    android:id="@+id/treesScale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/treesUsed"
                    android:text="1 leaf per tree killed"/>
            </RelativeLayout>


            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/leafcopy"
                android:scaleType="fitXY"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/leafcopy"
                android:scaleType="fitXY"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/leafcopy"
                android:scaleType="fitXY"/>


        </LinearLayout>

        </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"></LinearLayout>

</LinearLayout>
